<cache-config xmlns="http://schemas.tangosol.com/cache">

  <caching-scheme-mapping>
    <cache-mapping>
      <cache-name>custom-serializer-xmlconfigurable</cache-name>
      <scheme-name>extend-custom-serializer-xmlconfigurable</scheme-name>
    </cache-mapping>
  </caching-scheme-mapping>

  <caching-schemes>
    <remote-cache-scheme>
      <scheme-name>extend-custom-serializer-xmlconfigurable</scheme-name>
      <service-name>ExtendTcpCacheServiceCustomSerializerXml</service-name>
      <initiator-config>
        <tcp-initiator>
          <remote-addresses>
            <socket-address>
              <address>127.0.0.1</address>
              <port>9098</port>
            </socket-address>
            <socket-address>
              <address>127.0.0.1</address>
              <port>9198</port>
            </socket-address>
          </remote-addresses>
        </tcp-initiator>
        <outgoing-message-handler>
          <request-timeout>5s</request-timeout>
        </outgoing-message-handler>
        <serializer>xml</serializer>
        <connect-timeout>10s</connect-timeout>
      </initiator-config>
    </remote-cache-scheme>
  </caching-schemes>

</cache-config>
